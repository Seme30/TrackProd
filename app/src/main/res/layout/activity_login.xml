<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_screen"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@mipmap/ic_launcher"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            >

<!--            log will be here-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/client_login"
        android:layout_marginBottom="100dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:layout_marginRight="15dp"
            >

            <Spinner
                android:id="@+id/user_role_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email_LOGN"
                android:hint="Email"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:maxLength="25"
                android:textColor="#000"
                android:background="#FDFEFE"
                android:textColorHint="#7F8C8D"
                android:padding="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#99A3A4 "
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_marginRight="15dp">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pass_LOGIN"
                    android:textSize="18sp"
                    android:hint="Password"
                    android:layout_marginLeft="10dp"
                    android:background="#FDFEFE"
                    android:inputType="textPassword"
                    android:textColor="#000"
                    android:textColorHint="#7F8C8D"
                    android:maxLength="25"
                    android:padding="10dp"
                    android:layout_marginRight="15dp"
                    tools:ignore="MissingClass" />

            </com.google.android.material.textfield.TextInputLayout>


            <!-- <EditText
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:id="@+id/et_pass"
                 android:textSize="20dp"
                 android:background="#FDFEFE"
                 android:textColor="#000"
                 android:textColorHint="#7F8C8D"
                 android:padding="10dp"
                 android:layout_marginRight="15dp"/>-->


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#99A3A4 "
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:text="Forget Password?"
            android:textColor="#3498DB"
            android:textSize="12sp"
            android:id="@+id/forgetpsd_LOGIN"  />
<!--            android:fontFamily="@font/futura_heavy_font"-->
<!--            app:fontFamily="@font/futura_heavy_font"-->

        <View
            android:layout_width="110dp"
            android:layout_height="1dp"
            android:background="#3498DB"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="25dp"/>

    </LinearLayout>

<!--login button -> will be here-->
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_LOGIN"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginBottom="60dp"
        />

</RelativeLayout>